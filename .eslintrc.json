{
  //Настройки проекта
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  //Наборы правил
  "extends": [
    "airbnb-base",
    "plugin:jest/recommended"
  ],
  //Плагины с набором правил(?)
  "plugins": [
    "jest",
    "babel"
  ],
  // Движок парсинга
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6
  },
  "rules": {
    "import/extensions": 0,
    "no-console": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "newline-per-chained-call": [
      "error",
      {
        "ignoreChainWithDepth": 2
      }
    ]
  }
}